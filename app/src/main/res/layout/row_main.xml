<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/app_padding_half"
    android:layout_marginEnd="@dimen/app_padding_half"
    android:layout_marginBottom="@dimen/app_padding_half">


    <ImageView
        android:id="@+id/image_main"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rect_clip"
        android:scaleType="centerCrop" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_main"
        android:background="@color/background4"
        android:paddingTop="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_medium"
            android:textStyle="bold"
            android:textColor="@color/text3"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/txt_main_cuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_medium"
            android:textColor="@android:color/white"
            android:paddingEnd="@dimen/padding_medium"
            android:textSize="@dimen/text_xsmall" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_main"
        android:layout_alignParentTop="true"
        android:background="@drawable/rect_stroke" />
</RelativeLayout>